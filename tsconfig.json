{
  "compilerOptions": {
    "resolveJsonModule": true,
    "target": "es6",
    "moduleResolution": "Node",
    "lib": [ "ES2015", "dom" ],
    "outDir": "./build",
    "strict": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "build": true,
    "declaration": true
  },
  "include": [
    "src/**/*.ts"
  ]
}
